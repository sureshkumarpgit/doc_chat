<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <webSocket enabled="false" />
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" scriptProcessor="python.exe" resourceType="Unspecified" requireAccess="Script" />
    </handlers>
    <httpPlatform processPath="python.exe" arguments="-m streamlit.cli run app.py --server.port %HTTP_PLATFORM_PORT% --server.headless true" startupTimeLimit="60" processesPerApplication="1">
      <environmentVariables>
        <environmentVariable name="PYTHONUNBUFFERED" value="true" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>
